.first_tab .goods_item{
  padding: 10px 0px;
  margin: 10rpx 0rpx;
  display: flex;
  border-bottom: 1px solid #ccc;
  background-color: white;
}
.first_tab .goods_item .goods_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-content: center;
}
.first_tab .goods_item .goods_img_wrap image{
  width: 80%;
  height: 150px;
}
.first_tab .goods_info_wrap{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_info_wrap .goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.first_tab .goods_info_wrap .goods_price{
  color: salmon;
  font-size: 32rpx;
} 